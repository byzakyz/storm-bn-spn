file(GLOB_RECURSE ALL_FILES ${PROJECT_SOURCE_DIR}/src/storm-bn/*.h ${PROJECT_SOURCE_DIR}/src/storm-bn/*.cpp)

register_source_groups_from_filestructure("${ALL_FILES}" storm-bn)



file(GLOB_RECURSE STORM_BN_SOURCES ${PROJECT_SOURCE_DIR}/src/storm-bn/*/*.cpp)
file(GLOB_RECURSE STORM_BN_HEADERS ${PROJECT_SOURCE_DIR}/src/storm-bn/*/*.h)


# Create storm-bn.
add_library(storm-bn SHARED ${STORM_BN_SOURCES} ${STORM_BN_HEADERS} parser/Parameter.cpp parser/Parameter.h transformer/Binarizator.cpp transformer/Binarizator.h creator/NETFileCreator.cpp creator/NETFileCreator.h transformer/NaiveBinarizator.cpp transformer/NaiveBinarizator.h)

# Remove define symbol for shared libstorm.
set_target_properties(storm-bn PROPERTIES DEFINE_SYMBOL "")
#add_dependencies(storm resources)
list(APPEND STORM_TARGETS storm-bn)
set(STORM_TARGETS ${STORM_TARGETS} PARENT_SCOPE)

target_link_libraries(storm-bn PUBLIC storm storm-parsers ${STORM_BN_LINK_LIBRARIES})

# Install storm headers to include directory.
foreach(HEADER ${STORM_BN_HEADERS})
	string(REGEX REPLACE "${PROJECT_SOURCE_DIR}/src/?" "" RELATIVE_HEADER_PATH ${HEADER})
	string(REGEX MATCH "(.*)[/\\]" RELATIVE_DIRECTORY ${RELATIVE_HEADER_PATH})
	string(REGEX REPLACE "${RELATIVE_DIRECTORY}/?" "" HEADER_FILENAME ${RELATIVE_HEADER_PATH})
	add_custom_command(
		OUTPUT ${CMAKE_BINARY_DIR}/include/${RELATIVE_DIRECTORY}${HEADER_FILENAME}
		COMMAND ${CMAKE_COMMAND} -E make_directory ${CMAKE_BINARY_DIR}/include/${RELATIVE_DIRECTORY}
		COMMAND ${CMAKE_COMMAND} -E copy ${HEADER} ${CMAKE_BINARY_DIR}/include/${RELATIVE_DIRECTORY}${HEADER_FILENAME}
		DEPENDS ${HEADER}
	)
	list(APPEND STORM_BN_OUTPUT_HEADERS "${CMAKE_BINARY_DIR}/include/${RELATIVE_DIRECTORY}${HEADER_FILENAME}")
endforeach()
add_custom_target(copy_storm_bn_headers DEPENDS ${STORM_BN_OUTPUT_HEADERS} ${STORM_BN_HEADERS})
add_dependencies(storm-bn copy_storm_bn_headers)

# installation
install(TARGETS storm-bn EXPORT storm_Targets RUNTIME DESTINATION bin LIBRARY DESTINATION lib OPTIONAL)

